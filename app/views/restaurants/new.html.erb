
<div class="mx-auto p-2 m-5" style="width: 400px;">
<%= simple_form_for(@restaurant) do |f| %>
  <%= f.input :name, class:"form-label" %>
  <%= f.input :address, class:"form-label" %>
  <%= f.input :phone_number, class:"form-label" %>
  <%= f.input :category, :collection => ["chinese", "italian", "japanese", "french", "belgian"] %>
  <%= f.submit "Submit", class:"btn btn-primary" %>
<% end %>
</div>
